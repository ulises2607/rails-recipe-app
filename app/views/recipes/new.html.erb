<h1> Add a recipe </h1>
<div>
    <%= form_with(model: @recipe, method: :post) do |form|%>
        <%= form.label :name %>
        <%= form.text_field :name %>
        <%= form.label :preparation_time %>
        <%= form.number_field :preparation_time %>
        <%= form.label :cooking_time %>
        <%= form.number_field :cooking_time %>
        <%= form.label :description %>
        <%= form.text_area :description %>
        <%= form.hidden_field :public, value: false %>
        <%= form.hidden_field :user_id, value: current_user.id %>

        <%= form.submit %>
    <% end %>
</div>