<h1 class="container text-center"> Add a recipe </h1>
<div>
    <%= form_with(model: @recipe, method: :post) do |form|%>
        <div class="container d-flex flex-column">
            <%= form.label :name %>
            <%= form.text_field :name %>
            <%= form.label :preparation_time %>
            <%= form.number_field :preparation_time %>
            <%= form.label :cooking_time %>
            <%= form.number_field :cooking_time %>
            <%= form.label :description %>
            <%= form.text_area :description %>
            <%= form.hidden_field :public, value: false %>
            <%= form.hidden_field :user_id, value: current_user.id %>

            <%= form.submit %>
        </div>
    <% end %>
</div>